<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.AddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fa_AddRecipe"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/fashion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Product"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/fa_AddRecipe"
            app:layout_constraintEnd_toEndOf="@+id/fa_AddRecipe"
            app:layout_constraintStart_toStartOf="@+id/fa_AddRecipe" />

        <ImageView
            android:id="@+id/fa_AddPost"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/regular_post"
            app:layout_constraintEnd_toEndOf="@+id/fa_AddRecipe"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fa_AddRecipe"
            app:layout_constraintTop_toBottomOf="@+id/fa_AddRecipe" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Post"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/fa_AddPost"
            app:layout_constraintEnd_toEndOf="@+id/fa_AddPost"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="@+id/fa_AddPost" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>