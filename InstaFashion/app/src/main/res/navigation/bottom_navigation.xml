<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.hdd.instaFashion.presentation.fragments.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_discover"
        android:name="com.hdd.instaFashion.presentation.fragments.DiscoverFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.hdd.instaFashion.presentation.fragments.AddFragment"
        android:label="Post"
        tools:layout="@layout/fragment_add" />
    <fragment
        android:id="@+id/navigation_trending_recipe"
        android:name="com.hdd.instaFashion.presentation.fragments.TrendingRecipeFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_trending_product" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.hdd.instaFashion.presentation.fragments.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>